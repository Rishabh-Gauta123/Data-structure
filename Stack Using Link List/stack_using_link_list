#include<stdio.h>
#include<stdlib.h>
struct node
{
    int data;
    struct node *link;
};
int main()
{
    void push(void);
    push();
}
struct node *temp,*newnode,*top=0;
void display()
{
    temp=top;
    if(top==0)
    {
        printf("empty stack:\n");
    }
    else
    {
        //printf("the data in stack is:\n");
        while(temp!=0)
        {
            printf("%d ",temp->data);
            temp=temp->link;
        }
    }
    printf("\n");
}
void push()
{
    int i,x,val;
    printf("how many element want you push in stack:\n");
    scanf("%d",&x);
    for(i=0;i<x;i++)
    {
        printf("enter data:\n");
        scanf("%d",&val);
        newnode=(struct node*)malloc(sizeof(struct node));
        newnode->data=val;
        newnode->link=top;
        top=newnode;
    }
    printf("the data in stack is:\n");
    display();
    pop();
    
}
void pop()
{
    temp=top;
    if(top==0)
    {
        printf("stack is empty:\n");
    }
    else
    {
        printf("poping element is:%d\n",top->data);
        top=temp->link;
        free(temp);
    }
    printf("the lement in stack after poping are:\n");
    display();
    peek();
}
void peek()
{
    if(top==0)
    {
        printf("empty stack:\n");
    }
    else
    {
        printf("top element of stack is:%d",top->data);
    }
}
